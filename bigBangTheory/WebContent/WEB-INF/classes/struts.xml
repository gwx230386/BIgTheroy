<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 2.1//EN" "http://struts.apache.org/dtds/struts-2.0.dtd">
<struts>
	<constant name="struts.i18n.encoding" value="UTF-8"/>
	<constant name="struts.objectFactory" value="spring"/>
	<constant name="struts.multipart.saveDir" value="/temp"/>
	<include file="xml/struts/*.xml"></include>
	<constant name="struts.ui.theme" value="simple" />
	<!-- 开发者模式, 发布时可以调整为false -->
	<constant name="struts.devMode" value="true"></constant>
	<!-- 启用Freemarker 模板缓存 -->
<!--	<constant name="struts.freemarker.templatesCache" value="true"></constant>-->
</struts>    
